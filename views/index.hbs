<h1>{{title}}</h1>

  <div class="main">
    <form action="/login" method="POST">
    <p class="sign" align="center">Signup</p>
    <form class="form1">
      <input type="text" id="input-username" name="username" class="un " align="center" placeholder="Username" required >
      <input type="email" id="input-email" name="email" class="un " align="center" placeholder="Email" required >
      <input type="password" name="password" id="input-password" input class="pass" align="center" placeholder="Password" required>
      <button type="submit" class="submit" align="center">Sign up</button>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
    </form>
  </div>