{{#if userInSession}}
<div class="main">
    <p class="sign" align="center" >Edit the plant information: </p>
 
<form action="/plants/{{plantToEdit._id}}/edit" method="post">
 
  
  <input class="un" align="center" placeholder="Name" type="text" name="name" id="name-input" value="{{plantToEdit.name}}" />


  <input class="un" align="center" placeholder="Plant Care" type="text" name="plantCare" id="plantCare-input" value="{{plantToEdit.plantCare}}" />


  <input class="un" align="center" placeholder="Placement" type="text" name="placement" id="placement-input" value="{{plantToEdit.placement}}" />


  <input class="un" align="center" placeholder="Observations" type="text" name="observations" id="observations-input" value="{{plantToEdit.observations}}" />

    <input class="un" align="center" placeholder="Image" type="file" name="image" id="image-input" value="{{plantToEdit.imageUrl}}" />
 
  <button type="submit" class="submit">Save changes</button>
</form>
    <button class="submit">
        <a href="/plants/{{plantToEdit._id}}">back to plant Details</a>
    </button>

{{else}}
    <h2>You need to be logged in to edit your plants!</h2>

      <div class="main">
    <form action="/login" method="POST">
    <p class="sign" align="center">Login</p>
    <form class="form1">
      <input type="email" id="input-email" name="email" class="un " align="center" placeholder="Email" required >
      <input type="password" name="password" id="input-password" input class="pass" align="center" placeholder="Password" required>
      <button type="submit" class="submit" align="center">Sign in</button>
      {{!-- <p class="forgot" align="center"><a href="#">Forgot Password?</p> --}}

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
    </form>
  </div>
{{/if}}
</div>