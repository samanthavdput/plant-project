{{#if userInSession}}
  <div class="main">
    <form action="/plants/create" method="post" enctype="multipart/form-data">
    <p class="sign" align="center">Create a new Plant</p>
    <form class="form1">
      <input type="text" name="name" id="name-input" class="un" align="center" placeholder="Name"required />
      <textarea name="plantCare" id="plantCare-input" cols="30" rows="4" class="un" align="center" placeholder="Plantcare" /> </textarea>
      <input type="text" name="placement" id="placement-input" class="un" align="center" placeholder="Placement" />
      <input type="text" name="observations" id="observations-input" class="un" align="center" placeholder="Observations"/>
      <input type="file" name="image" id="image-input" class="un" />
      <button type="submit" class="submit" align="center">Create</button>

{{else}}
    <h2>You need to login to create new plants!</h2>
      <div class="main">
    <form action="/login" method="POST">
    <p class="sign" align="center">Login</p>
    <form class="form1">
      <input type="email" id="input-email" name="email" class="un " align="center" placeholder="Email" required >
      <input type="password" name="password" id="input-password" input class="pass" align="center" placeholder="Password" required>
      <button type="submit" class="submit" align="center">Sign in</button>
      {{!-- <p class="forgot" align="center"><a href="#">Forgot Password?</p> --}}

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
    </form>
  </div>
{{/if}}
    </form>
  </div>