{{#if userInSession}}
<div class="main">
    <h2>Welcome to your profile page, {{ userInSession.username }}!</h2>

    <button type="submit" class="submit" align="center">
        <a href="/plants/create">Create a new plant</a>
    </button>

    <button type="submit" class="submit" align="center">
        <a href="/your-plants">Your plants</a>
    </button>

    <button type="submit" class="submit" align="center">
        <a href="/">Back to Homepage</a>
    </button>
{{else}}
    <h2>You need to be logged in to acces the user profile! </h2>

      <div class="main">
    <form action="/login" method="POST">
    <p class="sign" align="center">Login</p>
    <form class="form1">
      <input type="email" id="input-email" name="email" class="un " align="center" placeholder="Email" required >
      <input type="password" name="password" id="input-password" input class="pass" align="center" placeholder="Password" required>
      <button type="submit" class="submit" align="center">Sign in</button>
      {{!-- <p class="forgot" align="center"><a href="#">Forgot Password?</p> --}}

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
    </form>
  </div>
{{/if}}
  </div>
</div>